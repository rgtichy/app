<% content_for :footer do %>
<sub>Session#index</sub>
<sub>Find me in app/views/session/index.html.erb</sub>
<% end %>
<div id='register'>
  <form action='/register' method='POST'>
    <input type='hidden' name='authenticity_token' value='<%= form_authenticity_token %>'>
    <div class='form-group row'>
      <label class='col-md-2' for='user[first_name]'>First Name:</label>
      <input class='col-md-3' name='user[first_name]' type='text' value="<%= @user.first_name %>">
      <label class='col-md-2' for='user[last_name]'>Last Name:</label>
      <input class='col-md-4' name='user[last_name]' type='text' value="<%= @user.last_name %>">
    </div>
    <div class='form-group row'>
      <label class='col-md-2' for='user[email]'>e-Mail:</label>
      <input class='col-md-5' name='user[email]' type='text' value="<%= @user.email %>">
    </div>
    <div class='form-group row'>
      <label class='col-md-2' for='user[password]'>Password:</label>
      <input class='col-md-3' name='user[password]' type='password' value="">
      <label class='col-md-2' for='user[password_confirmation]'>Confirm Password:</label>
      <input class='col-md-3' name='user[password_confirmation]' type='password' value="">
      <button class='btn btn-primary' type ="submit">Register</button>
    </div>
  </form>
</div>
<div id='login'>
  <form action='/login' method='POST'>
    <div class='form-group'>
      <input type='hidden' name='authenticity_token' value='<%= form_authenticity_token %>'>
      <label for='login'>e-Mail:</label>
      <input name='login' />
      <label for='password'>Password:</label>
      <input name='password' type='password'/>
      <button class='btn btn-success' type ="submit">Login</button>
    </div>
  </form>
</div>
